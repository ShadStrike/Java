import java.util.Scanner;


public class TestPolynôme {
	
	/**
	 * affiche le menu de l'application
	 */
	public static void afficherMenu()
	{
		System.out.println("#################################################################");
		System.out.println("##                  TP5 - La classe Polynôme                   ##");
		System.out.println("#################################################################");
        System.out.println("#   1- Aficher le polynôme                                      #");
        System.out.println("#   2- Ajouter un mônome au polynome                            #");
        System.out.println("#   3- Calculer le degré du polynôme                            #");
        System.out.println("#   4- Calculer la dériver du polynôme                          #");
        System.out.println("#   5- Verifie si il est egale à un autre polynôme              #");
        System.out.println("#   6- Calculer la somme du polynôme avec un autre polynôme     #");
        System.out.println("#   7- Calculer le produit du premier polynôme avec un monôme   #");
        System.out.println("#   8- Quitter l'application                                    #");
        System.out.println("#################################################################");
        System.out.println("Quel est votre choix ?");
	}
	
	public static Monôme lectureMonome(Scanner entrée)
	{
		float c;
		int e;	
		System.out.println("Nouveau coefficient?");
    	c = entrée.nextFloat();
    	System.out.println("Nouveaux exposant?");
    	e = entrée.nextInt();
    	Monôme a = new Monôme(c,e);
		return a;
	}
	
	public static Polynôme lecturePolynôme(Scanner entrée) throws PolynômeException
	{
		int c;
		boolean fin = false;
		Polynôme P = new Polynôme();
		P.ajouterMonôme(TestPolynôme.lectureMonome(entrée));
		do {
			System.out.println("Ajouter un autre monôme? (1 oui/2 non)");
			c = entrée.nextInt();
			switch (c) {
			case 1:                
			P.ajouterMonôme(TestPolynôme.lectureMonome(entrée));
				break;
			case 2:
                fin = true;
                break;
			}
		} while (!fin);
		return P;	
	}
	
	public static void main(String[] args) throws PolynômeException
	{
		int choix;
		boolean fini = false;
		Polynôme poly = new Polynôme();
		Scanner entrée = new Scanner(System.in);
		
		do {
			TestPolynôme.afficherMenu();
			choix = entrée.nextInt();
            switch (choix) {
            case 1:
            	System.out.println(poly.toString());
                break;
                
            case 2:
            	poly.ajouterMonôme(TestPolynôme.lectureMonome(entrée));
                break;
                
            case 3:
            	System.out.println(poly.degré());
                break;
            
            case 4:
            	System.out.println(poly.dérivée());
                break;
                
            case 5:
            	if (poly.equal(TestPolynôme.lecturePolynôme(entrée)))
            		System.out.println("Il sont equivalent");
            	else
            		System.out.println("Il ne sont pas equivalent");
                break;
                
            case 6:
            	System.out.println((poly.somme(TestPolynôme.lecturePolynôme(entrée))).toString());
                break;
            case 7:
            	
                break;
       	                
            case 8:
                fini = true;
                break;
            default:
                System.out.println("choix erroné");
            }
        } while (!fini);
        System.out.println("le programme est terminé");
        entrée.close();
	}
}
